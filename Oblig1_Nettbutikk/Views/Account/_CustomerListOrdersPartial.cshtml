@model List<Oblig1_Nettbutikk.Models.OrderView>

<h1>Orders</h1>
<ul>
    @{ 
        if(Model.Count == 0)
        {
            <li>
                <span style="color:deeppink">Ingen ordre foretatt</span>
            </li>

        }
    }
    @foreach(var order in Model)
    {
        <li>OrdreId: 
            @order.OrderId kl<time>@order.Date</time>
            <ul>
                @foreach(var item in order.Orderlines)
                {
                    <li>Produkt: 
                        @item.Product.Name
                    </li>
                }
            </ul>
        </li>
    }
</ul>